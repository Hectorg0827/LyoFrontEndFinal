# Environment variables for Lyo AI Learning Assistant
# Copy this file to .env and fill in your actual values.
# DO NOT COMMIT .env TO VERSION CONTROL.

# General
STORYBOOK_ENABLED=false
NODE_ENV=development

# API Configuration
API_BASE_URL=your_backend_api_url_here
API_TIMEOUT=15000 # Default 15 seconds
USE_BACKEND_API=true # \'true\' to use your backend, \'false\' to use client-side AI/mocks

# Generative AI (Gemma) Configuration - Updated from OpenAI
GEMMA_API_ENDPOINT=your_gemma_api_endpoint_url_here # e.g., https://api.gemma-provider.com/v1/generate
GEMMA_API_KEY=your_gemma_api_key_if_applicable # API Key for Gemma, if your endpoint requires one

# Storage Configuration
STORAGE_PREFIX=lyoApp_ # Prefix for AsyncStorage keys

# Feature Flags
FEATURE_FLAG_NEW_ONBOARDING=true
FEATURE_FLAG_VOICE_COMMANDS_V2=false

# Analytics
AMPLITUDE_API_KEY=your_amplitude_api_key_here

# Other sensitive keys or configurations
# Example: SENTRY_DSN=your_sentry_dsn_here
